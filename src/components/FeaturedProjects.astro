---
title: "Featured Projects"
// Aquí puedes definir tus proyectos como un array de objetos
const projects = [
    {
        name: "Proyecto Web",
        description: "Página web responsive hecha con React y Astro.",
        image: "/assets/proyecto1.jpg",
        link: "/proyectos/web"
    },
    {
        name: "Aplicación Node.js",
        description: "Backend con Node.js y MongoDB para gestión de datos.",
        image: "/assets/proyecto2.jpg",
        link: "/proyectos/node"
    },
    {
        name: "Automatización Python",
        description: "Scripts en Python para automatizar tareas repetitivas.",
        image: "/assets/proyecto3.jpg",
        link: "/proyectos/python"
    }
];
---

<section id="featured-projects">
    <div class="container">
        <h2>Proyectos Destacados</h2>
        <div class="projects-grid">
            {projects.map(project => (
                <div class="project-card">
                    <div class="project-image">
                        <img src={project.image} alt={`Imagen de ${project.name}`} />
                    </div>
                    <div class="project-content">
                        <h3>{project.name}</h3>
                        <p>{project.description}</p>
                        <a href={project.link} class="btn">Ver Proyecto</a>
                    </div>
                </div>
            ))}
        </div>
    </div>
</section>

<style>
    /* --- Variables (igual que navbar) --- */
    :root {
        --bg-color: #ffffff;
        --text-color: #111111;
        --accent-color: #666666;
        --border-color: #eeeeee;
        --font-main: 'Helvetica Neue', Helvetica, Arial, sans-serif;
    }

    /* --- Featured Projects Section --- */
    #featured-projects {
        background-color: #fafafa;
        border-bottom: 1px solid var(--border-color);
        padding: 120px 0;
        font-family: var(--font-main);
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 24px;
    }

    /* --- Título --- */
    #featured-projects h2 {
        font-size: 2.5rem;
        font-weight: 800;
        color: var(--text-color);
        text-align: center;
        margin-bottom: 80px;
        letter-spacing: -0.5px;
        text-transform: uppercase;
    }

    /* --- Grid de Proyectos --- */
    .projects-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 40px;
    }

    /* --- Card de Proyecto --- */
    .project-card {
        background-color: var(--bg-color);
        border: 1px solid var(--border-color);
        display: flex;
        flex-direction: column;
        transition: all 0.3s ease;
        overflow: hidden;
    }

    .project-card:hover {
        border-color: var(--text-color);
        transform: translateY(-4px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.08);
    }

    /* --- Imagen del Proyecto --- */
    .project-image {
        width: 100%;
        height: 280px;
        overflow: hidden;
        border-bottom: 1px solid var(--border-color);
    }

    .project-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.4s ease;
    }

    .project-card:hover .project-image img {
        transform: scale(1.05);
    }

    /* --- Contenido del Proyecto --- */
    .project-content {
        padding: 32px;
        display: flex;
        flex-direction: column;
        flex-grow: 1;
    }

    .project-content h3 {
        font-size: 1.3rem;
        font-weight: 700;
        color: var(--text-color);
        margin-bottom: 12px;
        letter-spacing: 0.5px;
        text-transform: uppercase;
    }

    .project-content p {
        font-size: 0.95rem;
        color: var(--accent-color);
        line-height: 1.6;
        margin-bottom: 28px;
        flex-grow: 1;
    }

    /* --- Botón (estilo consistente) --- */
    .btn {
        display: inline-block;
        background-color: var(--text-color);
        color: var(--bg-color);
        padding: 12px 24px;
        text-decoration: none;
        font-size: 0.8rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
        border: 2px solid var(--text-color);
        transition: all 0.3s ease;
        text-align: center;
        align-self: flex-start;
    }

    .btn:hover {
        background-color: var(--bg-color);
        color: var(--text-color);
    }

    /* --- Responsive --- */
    @media (max-width: 968px) {
        #featured-projects {
            padding: 80px 0;
        }

        #featured-projects h2 {
            font-size: 2rem;
            margin-bottom: 60px;
        }

        .projects-grid {
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 32px;
        }
    }

    @media (max-width: 576px) {
        #featured-projects {
            padding: 60px 0;
        }

        #featured-projects h2 {
            font-size: 1.8rem;
            margin-bottom: 40px;
        }

        .projects-grid {
            grid-template-columns: 1fr;
            gap: 24px;
        }

        .project-image {
            height: 220px;
        }

        .project-content {
            padding: 24px;
        }

        .btn {
            width: 100%;
        }
    }
</style>