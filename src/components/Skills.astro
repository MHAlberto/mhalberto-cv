---
title: "Skills"
// Define tus habilidades como un array de objetos
const skills = [
    { name: "HTML", level: 90 },
    { name: "CSS / Tailwind", level: 85 },
    { name: "JavaScript", level: 80 },
    { name: "React", level: 75 },
    { name: "Node.js", level: 70 },
    { name: "Python", level: 100 },
    { name: "Django", level: 100 },
    { name: "FastApi", level: 100 },
    { name: "Rust", level: 100 },
];
---

<section id="skills">
    <div class="container">
        <h2>Habilidades</h2>
        <div class="skills-grid">
            {skills.map(skill => (
                <div class="skill-card">
                    <div class="skill-header">
                        <h3>{skill.name}</h3>
                        <span class="skill-percentage">{skill.level}%</span>
                    </div>
                    <div class="skill-bar">
                        <div class="skill-progress" style={`width: ${skill.level}%`}></div>
                    </div>
                </div>
            ))}
        </div>
    </div>
</section>

<style>
    /* --- Variables (igual que navbar) --- */
    :root {
        --bg-color: #ffffff;
        --text-color: #111111;
        --accent-color: #666666;
        --border-color: #eeeeee;
        --font-main: 'Helvetica Neue', Helvetica, Arial, sans-serif;
    }

    /* --- Skills Section --- */
    #skills {
        background-color: var(--bg-color);
        border-bottom: 1px solid var(--border-color);
        padding: 120px 0;
        font-family: var(--font-main);
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 24px;
    }

    /* --- Título --- */
    #skills h2 {
        font-size: 2.5rem;
        font-weight: 800;
        color: var(--text-color);
        text-align: center;
        margin-bottom: 80px;
        letter-spacing: -0.5px;
        text-transform: uppercase;
    }

    /* --- Grid de Habilidades --- */
    .skills-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 32px;
    }

    /* --- Card de Habilidad --- */
    .skill-card {
        background-color: var(--bg-color);
        border: 1px solid var(--border-color);
        padding: 28px 32px;
        transition: all 0.3s ease;
    }

    .skill-card:hover {
        border-color: var(--text-color);
        transform: translateY(-2px);
    }

    /* --- Header de la Habilidad --- */
    .skill-header {
        display: flex;
        justify-content: space-between;
        align-items: baseline;
        margin-bottom: 16px;
    }

    .skill-card h3 {
        font-size: 0.9rem;
        font-weight: 700;
        color: var(--text-color);
        letter-spacing: 1px;
        text-transform: uppercase;
        margin: 0;
    }

    .skill-percentage {
        font-size: 0.85rem;
        font-weight: 600;
        color: var(--accent-color);
        letter-spacing: 0.5px;
    }

    /* --- Barra de Progreso --- */
    .skill-bar {
        width: 100%;
        height: 4px;
        background-color: var(--border-color);
        position: relative;
        overflow: hidden;
    }

    .skill-progress {
        height: 100%;
        background-color: var(--text-color);
        transition: width 1s ease-out;
        position: relative;
    }

    /* Efecto de animación al cargar */
    @keyframes fillBar {
        from {
            width: 0;
        }
    }

    .skill-progress {
        animation: fillBar 1.2s ease-out;
    }

    /* --- Hover Effect en la barra --- */
    .skill-card:hover .skill-progress {
        background-color: var(--accent-color);
    }

    /* --- Responsive --- */
    @media (max-width: 968px) {
        #skills {
            padding: 80px 0;
        }

        #skills h2 {
            font-size: 2rem;
            margin-bottom: 60px;
        }

        .skills-grid {
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 24px;
        }
    }

    @media (max-width: 576px) {
        #skills {
            padding: 60px 0;
        }

        #skills h2 {
            font-size: 1.8rem;
            margin-bottom: 40px;
        }

        .skills-grid {
            grid-template-columns: 1fr;
            gap: 20px;
        }

        .skill-card {
            padding: 20px 24px;
        }

        .skill-card h3 {
            font-size: 0.85rem;
        }

        .skill-percentage {
            font-size: 0.8rem;
        }
    }
</style>