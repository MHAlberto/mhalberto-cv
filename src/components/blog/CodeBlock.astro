---
const { language = "plaintext", filename } = Astro.props;
---

<div class="code-block">
  {
    filename && (
      <div class="code-header">
        <span class="filename">{filename}</span>
        <span class="language-tag">{language}</span>
      </div>
    )
  }

  <pre class={`language-${language}`}><code><slot /></code></pre>
</div>

<style>
  .code-block {
    margin: 40px 0;
    border: 1px solid #eeeeee;
    overflow: hidden;
    background: #ffffff;
  }

  .code-header {
    background: #fafafa;
    padding: 14px 20px;
    border-bottom: 1px solid #eeeeee;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .filename {
    font-size: 0.8rem;
    font-weight: 600;
    color: #111111;
    letter-spacing: 0.5px;
    font-family: "Monaco", "Courier New", monospace;
  }

  .language-tag {
    font-size: 0.7rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: #666666;
    padding: 3px 8px;
    border: 1px solid #eeeeee;
    background: #ffffff;
  }

  pre {
    background: #111111;
    color: #e5e7eb;
    padding: 24px;
    overflow-x: auto;
    margin: 0;
    font-size: 0.9rem;
    line-height: 1.7;
    font-family: "Monaco", "Courier New", monospace;
  }

  code {
    font-family: inherit;
  }

  /* Scrollbar minimalista */
  pre::-webkit-scrollbar {
    height: 6px;
  }

  pre::-webkit-scrollbar-track {
    background: #1a1a1a;
  }

  pre::-webkit-scrollbar-thumb {
    background: #666666;
  }

  pre::-webkit-scrollbar-thumb:hover {
    background: #888888;
  }

  @media (max-width: 768px) {
    .code-header {
      padding: 12px 16px;
    }

    pre {
      padding: 20px 16px;
      font-size: 0.85rem;
    }
  }
</style>
